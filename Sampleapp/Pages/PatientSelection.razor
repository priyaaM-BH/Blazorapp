@code {

    private void HandleValidSubmit(BookingFor bookingFor)
    {
        _patientInformationSeries.BookingFor = bookingFor;
        string whereFromValue = "patientSelection";
        string currentPageDirective = "schedule-appointment";
        string paramThree = "date-of-birth";
        string targetUrl;
        if( bookingFor == BookingFor.Guest)
        {
            targetUrl = $"/scheduling/{whereFromValue}/{currentPageDirective}/{paramThree}";
        }
        else
        {
            targetUrl = $"/scheduling/{whereFromValue}/{currentPageDirective}";
        }
        _navigationManager.NavigateTo(targetUrl);
        
    }
}
