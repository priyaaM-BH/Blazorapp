@page "/good-faith-estimate"
@inherits BaseComponent;

<PageTitle>GFE</PageTitle>
<button @onclick="GoToPrevious">back</button>
<h4 class="header">GFE</h4>
<label for="email">Enter email</label>
<input id="email" type="email" @bind="_wipInsuranceModule.GFEEmail" />
<button class="btn btn-primary" @onclick="HandleValidSubmit" >Next</button>

@code {

    protected override async Task OnInitializedAsync()
    {
       if(BaseComponent.InsurancePageDirectives.Contains("good-faith-estimate"))
       {
            BaseComponent.InsurancePageDirectives.Add("good-faith-estimate");
       }
    }
    private void HandleValidSubmit()
    {
        string whereFromValue = "insurance";
        string targetUrl = $"/controller/next/{whereFromValue}";
        NavigationManager.NavigateTo(targetUrl);
    }
    private void GoToPrevious()
    {
        BaseComponent.InsurancePageDirectives.Remove("good-faith-estimate");
        NavigationManager.NavigateTo("/insurance");
    }

    
}
